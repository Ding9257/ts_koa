{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports":true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "./src",
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "buildOnSave": true
}